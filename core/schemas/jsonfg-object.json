{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://beta.schemas.opengis.net/json-fg/jsonfg-object.json",
  "title": "a JSON-FG object, either a geometry, a feature, or a feature collection",
  "description": "This JSON Schema is part of JSON-FG version 0.3.0",
  "allOf": [
    {
      "oneOf": [
        { "$ref": "geometry-object.json" },
        { "$ref": "feature.json" },
        { "$ref": "featurecollection.json" }
      ]
    },
    {
      "type": "object",
      "required": ["conformsTo"],
      "properties": {
        "conformsTo": {
          "$ref": "conformsto.json"
        }
      }
    }
  ]
}
